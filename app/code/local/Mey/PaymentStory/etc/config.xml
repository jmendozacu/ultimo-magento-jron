<?xml version="1.0"?>
<config>
    <modules>
        <Mey_PaymentStory>
            <version>0.1.0</version>
        </Mey_PaymentStory>
    </modules>
    <global>
        <models>
            <mey_paymentstory>
                <class>Mey_PaymentStory_Model</class>
            </mey_paymentstory>
        </models>
        <helpers>
            <mey_paymentstory>
                <class>Mey_PaymentStory_Helper</class>
            </mey_paymentstory>
        </helpers>
    </global>
    <default>
        <payment>
            <mey_paymentstory>
                <active>0</active>
                <model>mey_paymentstory/payment_method_story</model>
                <order_status>pending</order_status>
                <title>Mey Story</title>
                <allowspecific>0</allowspecific>
                <debug>0</debug>
            </mey_paymentstory>
        </payment>
    </default>
</config>
