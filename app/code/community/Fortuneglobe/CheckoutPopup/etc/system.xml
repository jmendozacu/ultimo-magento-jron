<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <fortuneglobe translate="label" module="Fortuneglobe_CheckoutPopup">
            <label>Gutschein Einstellungen</label>
            <tab>fg_config</tab>
            <sort_order>50</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>

            <groups>
                <fortuneglobe_group translate="label" module="Fortuneglobe_CheckoutPopup">
                    <label>Gutschein Einstellungen</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <couponenable translate="label">
                            <label>Aktivierung</label>
                            <comment>Soll das Modul verwendet werden?</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                        </couponenable>
                        <couponid translate="label">
                            <label>Gutschein-ID</label>
                            <comment>Geben Sie die Gutscheinreferenz (die ID) an, zu welchem Gutschein die Codes zugewiesen werden sollen.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                        </couponid>
                        <couponcounter translate="label">
                            <label>Gutscheinanzahl </label>
                            <comment>Anzahl der Gutscheine, die pro Aufruf erzeugt werden</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                        </couponcounter>
                        <couponlength translate="label">
                            <label>Gutscheincode-Länge</label>
                            <comment>Geben Sie die Länge ein, die der Gutscheincode ohne Präfix und Suffix haben soll.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                        </couponlength>
                        <couponprefix translate="label">
                            <label>Gutscheincode-Präfix</label>
                            <comment>Geben Sie den Präfix, für die generierenden Gutscheincodes ein.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                        </couponprefix>
                        <couponsuffix translate="label">
                            <label>Gutscheincode-Suffix</label>
                            <comment>Geben Sie den Suffix, für die generierenden Gutscheincodes ein.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                        </couponsuffix>
                        <coupondash translate="label">
                            <label>Gutscheincode-Bindestrich</label>
                            <comment>Geben Sie die Länge ein, nach welcher immer ein "-" eingefügt werden soll.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                        </coupondash>
                    </fields>
                </fortuneglobe_group>
            </groups>
        </fortuneglobe>
    </sections>
</config>