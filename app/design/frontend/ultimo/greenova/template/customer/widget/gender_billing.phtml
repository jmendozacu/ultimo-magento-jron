<div class="input-box input-gender">
    <select id="billing:gender" name="billing[gender]" title="<?php echo $this->__('choose') ?>"<?php if ($this->isRequired()):?> class="validate-select required-entry"<?php endif; ?> <?php echo $this->getFieldParams() ?>>
        <?php $options = Mage::getResourceSingleton('customer/customer')->getAttribute('gender')->getSource()->getAllOptions();?>
        <?php $value = Mage::getSingleton('checkout/session')->getQuote()->getBillingAddress()->getGender();?>
        <?php foreach ($options as $option):?>
            <option value="<?php echo $option['value'] ?>"<?php if ($option['value'] == $value) echo ' selected="selected"' ?>><?php if($option['label'] == ""){echo $this->__('choose');}else{echo __($option['label']);}; ?></option>
        <?php endforeach;?>
    </select>
</div>
