?>
<?php
$_breadCrumbPosition = 1;
$_currentUrl = Mage::app()->getStore()->getCurrentUrl(false);
?>
<?php if($crumbs && is_array($crumbs)): ?>
    <div class="breadcrumbs-container">
        <div class="grid-full no-gutter breadcrumbs">
            <ul itemscope itemtype="http://schema.org/BreadcrumbList">
                <?php foreach($crumbs as $_crumbName=>$_crumbInfo): ?>
                    <li class="<?php echo $_crumbName ?>" itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                        <?php if($_crumbInfo['link']): ?>
                            <a href="<?php echo $_crumbInfo['link'] ?>" title="<?php echo $this->escapeHtml($_crumbInfo['title']) ?>" itemprop="item"><p itemprop="name"><?php echo $this->escapeHtml($_crumbInfo['label']) ?></p></a>
                            <meta itemprop="position" content="<?php echo $_breadCrumbPosition ?>"/>
                        <?php elseif($_crumbInfo['last']): ?>
                            <a href="<?php echo $_currentUrl ?>" title="<?php echo $this->escapeHtml($_crumbInfo['title']) ?>" itemprop="item"><strong itemprop="name"><?php echo $this->escapeHtml($_crumbInfo['label']) ?></strong></a>
                            <meta itemprop="position" content="<?php echo $_breadCrumbPosition ?>"/>
                        <?php else: ?>
                            <p itemprop="item">
                                <p itemprop="name"><?php echo $this->escapeHtml($_crumbInfo['label']) ?></p>
                            </p>
                            <meta itemprop="position" content="<?php echo $_breadCrumbPosition ?>"/>
                        <?php endif; ?>
                        <?php if(!$_crumbInfo['last']): ?>
                            <span>/ </span>
                        <?php endif; ?>
                    </li>
                    <?php $_breadCrumbPosition++; ?>
                <?php endforeach; ?>
            </ul>
        </div>
    </div>
<?php endif; ?>
